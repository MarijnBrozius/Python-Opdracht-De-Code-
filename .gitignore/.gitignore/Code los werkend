import sys

def palindroombepaling():
    m = 0
    n = 1
    f = 0
    x = str(accumulator)
    while True:
        if(m > int(len(str(accumulator)))):
            break
        if(n > int(len(str(accumulator)))):
            break
        m += 1
        n += 1
        if x != x[::-1]:
            x = x[:-1]
            f += 1
        elif x == x[::-1]:
            print("("+str(accumulator)+",", end='')
            print(f, end='')
            print(")")
            break



